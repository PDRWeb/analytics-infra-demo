{
  "id": null,
  "title": "System Health Dashboard",
  "panels": [
    {
      "id": 1,
      "title": "Service Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A",
          "legendFormat": "CPU Usage %"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 3,
      "title": "Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "refId": "A",
          "legendFormat": "Memory Usage %"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Health Checks",
      "type": "timeseries",
      "targets": [
        {
          "expr": "health_check_total",
          "refId": "A",
          "legendFormat": "{{service}} - {{status}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "uid": "system-health-simple",
  "version": 1
}
